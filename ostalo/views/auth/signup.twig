{% extends 'templates/app.twig' %}

{%block content %}
	<div class="row">
		<div calss="col-md-offset-3">
			<div calss="panel panel-default">
				<div calss="panel-heading" >Sign up</div>
					<div class="panel-body">

					{{ errors | json_encode}}

						<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
							<div class="form-group">
							<lable for="email">Email</lable>
							<input type="text" = name="email" id="email" placeholder="your@email.com" class="form-control" value="{{old.email}}">

							{% if errors.email %}

							<span class="help-block">{{ errors.email | first}}</span>

							{% endif %}
							</div>

							<div class="form-group{{error.name ? ' has-error' : '' }}">
							<lable for="name">Username</lable>
							<input type="text" = name="name" id="name" class="form-control" value="{{old.name}}">

							{% if errors.name %}

							<span class="help-block">{{ errors.name | first}}</span>

							{% endif %}
						</div>
						<div class="form-group{{error.password ? ' has-error' : '' }}">
							<lable for="password">Password</lable>
							<input type="password" = name="password" id="password" class="form-control">
							{% if errors.password %}

							<span class="help-block">{{ errors.password | first}}</span>

							{% endif %}

						</div>
						
						<button type="submit" class="btn btn-default">Sign up</button>

						{{ csrf.field | raw }}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{%endblock %}